################################################
# HDMI / LCD
#################################################
echo '----------------------------------'
if (/usr/bin/tvservice -s | /bin/egrep 'HDMI|DVI') ; then
     echo '----------------------------------'
     echo '    HDMI Display Detected'
     echo '                    o'
     echo '           o       /'
     echo '            \\     /'
     echo '             \\   /'
     echo '              \\ /'
     echo '+--------------v-------------+'
     echo '|  __________________      @ |'
     echo '| /                  \\       |'
     echo '| |             ,--, |  (\\)  |'
     echo '| |       _ ___/ /\\| |       |'
     echo '| |   ,;`( )__, )  ~ |  (-)  |'
     echo '| |  // o//   `--;   |       |'
     echo '| \\  ` o \\     |     / :|||: |'
     echo '|  -ooo--------------  :|||: |'
     echo '+----------------------------+'
     echo '   []                    []'
     sudo ./enable-hdmi
else
     echo '----------------------------------'
     echo '     LCD Detected'
     echo ' _______________'
     echo '|,----------.  |\'
     echo '||           |=| |'
     echo '||          || | |'
     echo '||       . _o| | | __'
     echo '|`-----------` |/ /~/'
     echo ' ~~~~~~~~~~~~~~~ / /'
     echo '                 ~~'
     sudo ./enable-lcd
fi
echo '----------------------------------'
